# Function to always suggest "hej"
_simple_auto_suggest() {
    local current_input="${BUFFER}"
	# local suggestion="$current_input""hoj"

    if [[ "$suggestion" == "$current_input"* ]]; then
        POSTDISPLAY="${suggestion#${current_input}}"
    else
        POSTDISPLAY=""
    fi

    zle -R
}

# Function to accept the suggestion
_simple_auto_suggest_accept() {
    BUFFER+=$POSTDISPLAY
    CURSOR=${#BUFFER}
    POSTDISPLAY=""
    zle -R
}

# Function to refresh the suggestion system
_zle-line-pre-redraw() {
    _simple_auto_suggest
}

# Bind functions to Zle (Zsh Line Editor)
zle -N _simple_auto_suggest
zle -N _simple_auto_suggest_accept
zle -N zle-line-pre-redraw _zle-line-pre-redraw

# Bind right arrow to accept suggestion
bindkey '^[[C' _simple_auto_suggest_accept

# Set the color of the suggestion to grey
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=8'
