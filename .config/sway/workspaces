# Keybindings to switch workspaces
bindsym $mod+5 workspace A; exec ~/.config/sway/test.sh A mousepad
bindsym $mod+r workspace R; exec ~/.config/sway/test.sh R mousepad
bindsym $mod+e workspace E; exec ~/.config/sway/test.sh E code
bindsym $mod+o workspace O; exec ~/.config/sway/test.sh O obsidian
bindsym $mod+i workspace I; exec ~/.config/sway/test.sh I firefox --new-window
bindsym $mod+b workspace B; exec ~/.config/sway/test.sh B mousepad
bindsym $mod+d workspace D; exec ~/.config/sway/test.sh D discord
bindsym $mod+y workspace Y; exec ~/.config/sway/test.sh Y firefox --new-window youtube.com
bindsym $mod+c workspace C; exec ~/.config/sway/test.sh C firefox --new-window chatgpt.com
bindsym $mod+n workspace N; exec ~/.config/sway/test.sh N kitty /home/hector/.config/hypr/attatch_or_create_tmux.sh default
bindsym $mod+s workspace S; exec ~/.config/sway/test.sh S spotify
bindsym $mod+m workspace M; exec ~/.config/sway/test.sh M firefox --new-window mail.one.com
bindsym $mod+g workspace G; exec ~/.config/sway/test.sh G gimp
bindsym $mod+x workspace X; exec ~/.config/sway/test.sh X mousepad

# Move focused container to workspace
bindsym $mod+Shift+a move container to workspace "A"
bindsym $mod+Shift+r move container to workspace "R"
bindsym $mod+Shift+e move container to workspace "E"
bindsym $mod+Shift+o move container to workspace "O"
bindsym $mod+Shift+i move container to workspace "I"
bindsym $mod+Shift+b move container to workspace "B"
bindsym $mod+Shift+d move container to workspace "D"
bindsym $mod+Shift+y move container to workspace "Y"
bindsym $mod+Shift+c move container to workspace "C"
bindsym $mod+Shift+n move container to workspace "N"
bindsym $mod+Shift+s move container to workspace "S"
bindsym $mod+Shift+m move container to workspace "M"
bindsym $mod+Shift+g move container to workspace "G"
bindsym $mod+Shift+x move container to workspace "X"
