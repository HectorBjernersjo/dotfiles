# Set your switcher key (Super/Windows key)
set $mod Mod4

# Workspace assignments and auto-start applications
workspace 1
workspace A output HDMI-A-1
workspace R output HDMI-A-1
workspace E output HDMI-A-1
workspace O output HDMI-A-1
workspace I output HDMI-A-1
workspace B output DP-1
workspace D output DP-1
workspace Y output DP-1
workspace C output DP-1
workspace N output HDMI-A-1
workspace S output HDMI-A-1
workspace M output HDMI-A-1
workspace G output HDMI-A-1
workspace X output HDMI-A-1

assign [app_id="tjabba"] workspace A

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
